@model Application.Web.Areas.Administration.Models.InputModels.CreatePageInputModel

@using (Html.BeginForm((string)ViewBag.FormMode, "Pages", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <h2 class="main-heading text-center">
        @ViewBag.Title <br />
    </h2>
    <hr />
    <section class="registration-area">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-smart">
                    <div class="panel-heading">
                        <h3 class="panel-title">Задължителни данни за страницата</h3>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Title)
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Заглавие" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.ShortDescription, new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.ShortDescription)
                                    @Html.EditorFor(model => model.ShortDescription)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.Content, new { @class = "control-label" })
                                    @Html.ValidationMessageFor(model => model.Content)
                                    @Html.EditorFor(model => model.Content)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-warning">
                                        @ViewBag.FormModeText
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}