@model IEnumerable<Application.Web.Areas.Administration.Models.ViewModels.CategoryViewModel>
@{
    ViewBag.Title = "Категории";
}

<div class="container" style="margin-top:-20px;">
    <h3>@ViewBag.Title</h3>
    <p class="text-danger">
        //TODO: Loading Gif is not displayed when you try to delete newly added category.<br />
        //TODO: Make some visual responce for errors when invalid subcategory is made <br />
        //TODO: Use the _SubCategoryPartial for actual subcategory listing. <br />
    </p>
    <div class="row">
        @for (int i = 0; i < Model.Count(); i++)
        {
            var category = Model.ElementAt(i);
            var categoryUiId = "subcategories-list-" + @category.Id;
            var loadingElementId = "loading-element-" + @categoryUiId;
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">@category.Name</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group" id="@categoryUiId">
                            @for (int j = 0; j < category.SubCategories.Count(); j++)
                            {
                                var subcategory = category.SubCategories.ElementAt(j);
                                var subcategoryUiId = "subcategory-item-" + subcategory.Id;
                                var subcategoryEditUiId = "subcategory-edit-input-" + subcategory.Id;
                                var subcategorySpanId = "subcategory-span-" + subcategory.Id;
                                <li class="list-group-item" id="@subcategoryUiId"><span id="@subcategorySpanId">@subcategory.Name</span>
                                    <a href="#" title="Редактирай" style="margin-right:5px;" class="glyphicon glyphicon-edit pull-right"></a> 
                                    @Ajax.ActionLink(" ", "DeleteSubCategory", new { id = subcategory.Id }, 
                                    new AjaxOptions
                                       {
                                           InsertionMode = InsertionMode.Replace,
                                           UpdateTargetId = subcategoryUiId,
                                           HttpMethod = "Post",
                                           LoadingElementId = loadingElementId
                                       }, new { @id = subcategoryUiId + "-delete-btn", @class = "glyphicon glyphicon-ban-circle pull-right", @style="margin-right: 5px;" })
                                </li>
                                <li class="list-group-item" style="display:none;" id="@subcategoryEditUiId">
                                    @using (Ajax.BeginForm("EditSubCategory",
                                        new AjaxOptions
                                            {
                                                HttpMethod = "Post",
                                                InsertionMode = InsertionMode.Replace,
                                                UpdateTargetId = subcategorySpanId,
                                                OnFailure = "subCategoryEditFailure",
                                                LoadingElementId = loadingElementId
                                            }))
                                    {
                                        @Html.Hidden("CategoryId", category.Id)
                                        @Html.Hidden("Id", subcategory.Id)
                                        @Html.AntiForgeryToken()
                                        <input type="text" name="name" id="editSubCategoryInput" class="form-control" value="@subcategory.Name" style="width:215px;float:left;" />
                                        <input type="submit" class="btn btn-success subCatSaveBtn" value="Запази" style="margin-left:10px;" />
                                        }
                                </li>
                            }
                            <li id="@loadingElementId" class="list-group-item text-center" style="display:none;" >
                                <img src="~/Content/images/gif-load.gif" />
                            </li>
                        </ul>
                        @using (Ajax.BeginForm("PostSubCategory", 
                            new AjaxOptions 
                            { 
                                HttpMethod = "Post",
                                InsertionMode = InsertionMode.InsertAfter,
                                UpdateTargetId = categoryUiId,
                                OnFailure = "subCategoryPostFailure",
                                LoadingElementId = loadingElementId
                            }))
                        {
                            @Html.Hidden("CategoryId", category.Id)
                            @Html.AntiForgeryToken()
                            <input type="text" name="name" id="subcategoryInput" placeholder=" Подкатегория" class="form-control"/>
                            <textarea name="description" placeholder=" Кратко описание на категорията" class="form-control" style="margin-top:10px;"></textarea>
                            <input type="submit" class="btn btn-success" value="Добави" style="margin-top:10px;" />
                        }
                        
                    </div>
                </div>
            </div>
                            if (i > 0 && (i + 1) % 3 == 0)
                            {
                @:</div>
                @:<div class="row">
            }
        }
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $(document).ready(function () {
            $('.glyphicon-edit').on('click', function (e) {
                e.preventDefault();
                $parent = $(this).parent();
                $parent.hide();
                $parent.next().show();
            })

            $('.subCatSaveBtn').on('click', function (e) {
                $LiElement = $(this).parents('li');
                $LiElement.hide();
                $LiElement.prev().show();
            })
        })

        function subCategoryPostFailure() {
            alert("Въведи име на категорията");
        }
        function subCategoryEditFailure() {
            alert("Името неможе да е празно");
        }
    </script>
}


