@model IEnumerable<Application.Web.Areas.Administration.Models.ViewModels.ProductViewModel>
@{
    ViewBag.Title = "Продукти";
}

<div class="container" style="margin-top:-20px;">
    <h3>@ViewBag.Title</h3>
    <div class="panel panel-info" style="border: 1px solid #222222;">
        <div class="panel-heading" style="background: #222222;color: #777;border-bottom:none;">Стоманени въжета > Асансьорни въжета</div>
        <div class="panel-body">

            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th><span class="glyphicon glyphicon-picture"></span></th>
                        <th>Име</th>
                        <th>Категория</th>
                        <th>Подкатегория</th>
                        <th>Активен</th>
                        <th><span class="glyphicon glyphicon-bookmark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Промоционален: Продукта ще се визуализира на началната страница!"></span></th>
                        <th><span class="glyphicon glyphicon-calendar" data-toggle="tooltip" data-placement="top" title="" data-original-title="Датата на която е създаден продукта"></span> Дата</th>
                        <th><span class="glyphicon glyphicon-cog"></span> Редакция </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var counter = i + 1;
                        var product = Model.ElementAt(i);
                        <tr>
                            <td>@counter</td>
                            <td>@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td>@product.SubCategoryName</td>
                            <td>
                                @if (@product.IsActive)
                                {
                                    <span class="glyphicon glyphicon-check"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-unchecked"></span>
                                }
                            </td>
                            <td>
                                @if (@product.IsFeatured)
                                {
                                    <span class="glyphicon glyphicon-check"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-unchecked"></span>
                                }
                            </td>
                            <td><span class="label label-default">@Html.DisplayFor(x => product.DateAdded)</span></td>
                            <td>
                                <a href="#" title="Preview" class="glyphicon glyphicon-file edit-btn"></a>
                                <a href="#" title="Edit" class="glyphicon glyphicon-edit edit-btn"></a>
                                <a href="#" title="Delete" class="glyphicon glyphicon-ban-circle edit-btn"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <ul class="pagination pull-right">
                <li class="disabled"><a href="#">«</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
            </ul>
            <a href="Products/Create" class="btn btn-primary">Добави Продукт</a>
        </div>
    </div>
</div>

