<body>
    <!-- Header Section Starts -->
    <header id="header-area">
        <!-- Header Top Starts -->
        <div class="header-top">
            <div class="container">
                <!-- Header Links Starts -->
                <div class="col-md-12">
                    <div class="header-links">
                        @using Microsoft.AspNet.Identity
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                            {
                                @Html.AntiForgeryToken()

                                <ul class="nav navbar-nav navbar-right">
                                    <li><a href="#" class="fa fa-facebook-square"> Facebook</a></li>
                                    <li><a href="#" class="fa fa-twitter-square"> Twitter</a></li>
                                    <li><a href="#" class="fa fa-google-plus-square"> Goolge+</a></li>
                                    <li>
                                        @Html.ActionLink(" Администрация", "Index", "Products", new { area = "Administration" }, new { @class = "fa fa-cog" })
                                    </li>
                                    <li>
                                        @Html.ActionLink("Здравей " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                    </li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Излез</a></li>
                                </ul>
                            }
                        }
                        else
                        {
                            <ul class="nav navbar-nav pull-right">
                                <li><a href="#" class="fa fa-facebook-square"> Facebook</a></li>
                                <li><a href="#" class="fa fa-twitter-square"> Twitter</a></li>
                                <li><a href="#" class="fa fa-google-plus-square"> Goolge+</a></li>
                                <li>
                                    @Html.ActionLink(" Регистрация", "Register", "Account", new { area = "" }, new { @class = "fa fa-unlock" })
                                </li>
                                <li>
                                    @Html.ActionLink(" Влез", "Login", "Account", new { area = "" }, new { @class = "fa fa-lock" })

                                </li>
                            </ul>
                        }

                    </div>
                </div>
                <!-- Header Links Ends -->
            </div>
        </div>
        <!-- Header Top Ends -->
        <!-- Starts -->
        <div class="container">
            <!-- Main Header Starts -->
            <div class="main-header">
                <div class="row">
                    <!-- Logo Starts -->
                    <div class="col-md-9">
                        <div id="logo">
                            <a href="/"><img src="~../../../../Content/images/logo.jpg" title="Online Сапани" alt="Spice Shoppe" class="img-responsive" /></a>
                        </div>
                    </div>
                    <!-- Logo Starts -->
                    <!-- Search Starts -->
                    <div class="col-md-3">
                        <div id="search">
                            <div class="input-group">
                                <input id="searchbox" type="text" class="form-control input-lg" placeholder="Търси">
                                <span class="input-group-btn">
                                    <button class="btn btn-lg" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        @*<div class="autocomplete-row clearfix">
                            <a href="Products/Details/3"><img src="~/Uploads/1/1/2722738-5353872158-255660_detailsSmallThumb.jpg" /></a>
                            <a href="Products/Details/3" class="autocomplete-row-title">Сапан Едновъжен с 4 куки Ф 20 - 15 тона</a><br />
                            <p class="autocomplete-row-description ">Този сапан е подходящ за повдигане на дърва, асансьори и други тежки неща. Може да научите повече за това, което правим на следния адрес ...</p>
                        </div>*@
                    </div>
                    <!-- Search Ends -->
                </div>
            </div>
            <!-- Main Header Ends -->
            <!-- Main Menu Starts -->
            <nav id="main-menu" class="navbar" role="navigation">
                <!-- Nav Header Starts -->
                <div class="navbar-header">
                    <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-cat-collapse">
                        <span class="sr-only">Toggle Navigation</span>
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                <!-- Nav Header Ends -->
                <!-- Navbar Cat collapse Starts -->
                <div class="collapse navbar-collapse navbar-cat-collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("Начало", "Index", "Home", new { area = string.Empty }, null)
                        </li>
                        <li class="dropdown">
                            <a href="/" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="10">Продукти</a>
                            <div class="dropdown-menu">
                                <div class="dropdown-inner">
                                    @if (ViewBag.LayoutModel != null)
                                    {
                                        foreach (var category in ViewBag.LayoutModel.Categories)
                                        {
                                            <ul class="list-unstyled">
                                                <li class="dropdown-header">@category.Name</li>
                                                @foreach (var subCategory in category.SubCategories)
                                                {
                                                    <li><a tabindex="-1" href="@Url.Action("Index", "Products", new { Category = category.Id, SubCategory = subCategory.Id })">@subCategory.Name</a></li>
                                                }
                                            </ul>
                                        }
                                    }
                                </div>
                            </div>
                        </li>
                        @if (ViewBag.LayoutModel != null)
                        {
                            foreach (var page in ViewBag.LayoutModel.Pages)
                            {
                                var pageId = page.Id.ToString();
                                <li>@Html.ActionLink((string)page.Title, (string)pageId, "Pages", new { area = string.Empty }, null)</li>
                            }
                        }
                        <li>@Html.ActionLink("За Нас", "About", "Home", new { area = string.Empty }, null)</li>
                        <li>@Html.ActionLink("Контакти", "Contact", "Home", new { area = string.Empty }, null)</li>
                    </ul>
                </div>
                <!-- Navbar Cat collapse Ends -->
            </nav>
            <!-- Main Menu Ends -->
        </div>
        <!-- Ends -->
    </header>
    <!-- Header Section Ends -->
    <div id="main-container" class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
            <!-- Footer Section Starts -->
