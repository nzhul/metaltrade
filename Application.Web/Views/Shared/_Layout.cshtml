            <!-- JavaScript Files -->


            @Scripts.Render("~/bundles/spice-shopee")
            @RenderSection("scripts", required: false)
    <script>
        $(function () { $("[data-toggle='tooltip']").tooltip(); });
    </script>
    <script>
    $(function () {
        $("#searchbox").autocomplete({
            minLength: 2,
            source: '@Url.Action("GetAutocomplete", "Products", new { Area = "" })',
        }).autocomplete("instance")._renderItem = function (ul, item) {
            console.log(item)
            return $("<li>")
                    .append("<div class='autocomplete-row clearfix'><a href='/Products/Details/" + item.Id + "'><img src='/" + item.IconUrl + "' /></a><a href='/Products/Details/" + item.Id + "' class='autocomplete-row-title'>" + item.Name + "</a><br /><div class='autocomplete-row-description '>" + item.Description + "</div></div>")
                    .appendTo(ul);
        };
    });
    </script>
