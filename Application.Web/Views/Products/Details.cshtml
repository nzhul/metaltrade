                            }
                            <a href="@imageUrlBig" data-lightbox="product-images" data-title="@Model.Name"><img src="@imageUrl" alt="Image" class="img-responsive thumbnail" /></a>*@
                            @foreach (var thumbnail in @Model.Images)
                            {
                                string thumbnailUrl = "/" + thumbnail.ImagePath + "_detailsBigThumb." + thumbnail.ImageExtension;
                                string imageUrlBigNext = "/" + thumbnail.ImagePath + "_large." + thumbnail.ImageExtension;
                                string isPrimaryString = "";
                                if (thumbnailUrl.Contains("no-image") && @Model.Images.Count > 1)
                                {
                                    continue;
                                }
                                if (thumbnail.IsPrimary)
                                {
                                    isPrimaryString = "data-primary=primary";
                                }
                                <a href="@imageUrlBigNext" id="big-thumbnail-@thumbnail.Id" @isPrimaryString data-lightbox="product-images" style="display:none;"  data-title="@Model.Name"><img src="@thumbnailUrl" alt="Image" class="img-responsive thumbnail" /></a>
                            }
                        </p>
                        <ul class="list-unstyled list-inline">
                            @foreach (var thumbnail in @Model.Images)
                            {
                                string thumbnailUrl = "/" + thumbnail.ImagePath + "_detailsSmallThumb." + thumbnail.ImageExtension;
                                if (thumbnailUrl.Contains("no-image") && @Model.Images.Count > 1)
                                {
                                    continue;
                                }
                                <li>
                                    <img src="@thumbnailUrl" id="small-thumbnail-@thumbnail.Id" alt="Image" style="width:77px;cursor:pointer;" class="img-responsive thumbnail gallery-trigger" />
                                </li>
                            }
                        </ul>
