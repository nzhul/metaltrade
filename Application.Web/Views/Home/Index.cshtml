@model Application.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @Html.Partial("Home/_Slider")
</div>
<div class="row">
    <!-- 3 Column Banners Starts -->
    <div class="col3-banners">
        <div class="container">
            <ul class="row list-unstyled">
                <li class="col-sm-4">
                    <img src="~/Content/images/banners/3col-banner1.jpg" alt="banners" class="img-responsive" />
                </li>
                <li class="col-sm-4">
                    <img src="~/Content/images/banners/3col-banner2.jpg" alt="banners" class="img-responsive" />
                </li>
                <li class="col-sm-4">
                    <img src="~/Content/images/banners/3col-banner3.jpg" alt="banners" class="img-responsive" />
                </li>
            </ul>
        </div>
    </div>
    <!-- 3 Column Banners Ends -->
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @if (ViewBag.LayoutModel.Categories != null)
            {
                @Html.Partial("_Categories", (List<Application.Web.Areas.Administration.Models.ViewModels.CategoryViewModel>)ViewBag.LayoutModel.Categories)
            }
        </div>
        <div class="col-md-9">
            <h3 class="side-heading">Най-популярни продукти:</h3>
            <div class="row">
                @for (int i = 0; i < Model.Products.Count(); i++)
                {
                    var product = Model.Products.ElementAt(i);
                    var productThumbnail = product.PrimaryImage.ImagePath + "_indexThumb." + product.PrimaryImage.ImageExtension;
                    <div class="col-md-4">
                        <div class="product-col">
                            <img src="@productThumbnail" class="image" alt="Alternate Text" />
                            <div class="caption">
                                <h4>
                                    @Html.ActionLink(product.Name, "Details", "Products", new { id = product.Id }, null)
                                </h4>
                                <div class="description">
                                    @Html.Raw(product.ShortDescription)
                                </div>
                                <div class="cart-button button-group" style="margin-top:-15px;">
                                    <a href="Products/?Category=@product.CategoryId"  class="btn btn-wishlist" data-original-title="Кагегория: @product.CategoryName">
                                        <i class="glyphicon glyphicon-th-large"></i>
                                    </a>
                                    <a href="Products/Details/@product.Id" type="button" class="btn btn-cart">
                                        Детайли
                                        <i class="fa fa-arrow-circle-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    if (i > 0 && (i + 1) % 3 == 0)
                    {
                        @:</div>
                        @:<div class="row">
                    }
                }
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    @Html.ActionLink("Виж всички продукти", "Index", "Products",null, new { @class = "btn btn-warning" })
                    
                </div>
            </div>
        </div>
    </div>
</div>
